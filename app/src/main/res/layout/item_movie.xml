<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="391dp"
            android:layout_height="183dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintVertical_bias="0.012">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="392dp"
                android:layout_height="match_parent"

        >

            <TextView

                    android:layout_width="179dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_height="46dp"
                    android:id="@+id/iv_Nombre"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.075"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"/>
            <TextView

                    android:layout_width="299dp"
                    android:layout_height="41dp"
                    android:id="@+id/tv_apellido"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textStyle="italic"
                    app:layout_constraintTop_toBottomOf="@+id/iv_Nombre"
                    android:layout_marginTop="28dp"
                    app:layout_constraintHorizontal_bias="0.172"/>
            <TextView

                    android:layout_width="353dp"
                    android:layout_height="27dp"
                    android:id="@+id/tv_email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textStyle="italic"
                    app:layout_constraintTop_toBottomOf="@+id/tv_apellido"
                    android:layout_marginTop="12dp"
                    app:layout_constraintHorizontal_bias="0.41"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true" app:srcCompat="@android:drawable/ic_delete"
                    android:id="@+id/btnDeleteCliente"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.125"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="108dp"
                    app:backgroundTint="@color/red"
            />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/ic_popup_sync"
                    android:id="@+id/btnUpdateCliente"
                    app:backgroundTint="#0EBD08"
                    app:layout_constraintStart_toEndOf="@+id/btnDeleteCliente"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.557"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>