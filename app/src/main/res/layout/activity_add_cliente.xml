<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        tools:context=".vistas.AddCliente">


    <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"/>

    <EditText
            android:id="@+id/txtaddNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textViewName"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="2dp"/>
    <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido:"
            android:layout_below="@+id/txtaddNombre"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

    <EditText
            android:id="@+id/txtaddApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtaddNombre"
            android:layout_toEndOf="@+id/textViewEmail"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="5dp"/>

    <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_below="@+id/textViewEmail"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"/>
    <EditText
            android:id="@+id/txtaddEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtaddApellido"
            android:layout_toEndOf="@+id/textViewPhone"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="16dp"
            android:inputType="textEmailAddress"
            android:layout_marginStart="5dp"
    />
    <Button
            android:id="@+id/btnAddClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtaddEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Agregar Cliente"/>



</RelativeLayout >