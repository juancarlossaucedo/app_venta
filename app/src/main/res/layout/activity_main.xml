<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".vistas.MainActivity"
        android:background="@drawable/ic_fondo2">


    <Button
            android:text="Cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="308dp"
            app:backgroundTint="#FB092D"
            app:layout_constraintHorizontal_bias="0.158" android:id="@+id/btn_Cliente"/>
    <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="165dp"
            android:layout_height="150dp" android:src="@drawable/ic_client" android:id="@+id/imageFilterView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="136dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="PEDIDOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/btn_Cliente" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.616"
            app:backgroundTint="#0325D1"
            app:layout_constraintTop_toBottomOf="@+id/imageFilterView2"
            android:layout_marginTop="24dp"/>
    <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="168dp"
            android:layout_height="148dp"
            android:src="@drawable/ic_pedidos"
            android:id="@+id/imageFilterView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageFilterView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="136dp"
            app:layout_constraintHorizontal_bias="0.532"/>


</androidx.constraintlayout.widget.ConstraintLayout>